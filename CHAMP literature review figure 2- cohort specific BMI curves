#FOR MEANS:

setwd("c:/Users/mqbpjhr4/Documents")
data<-read.table("MeanBMIlitreview.csv",header=T,sep=",")
boys<-data[data$gender=="m",]
girls<-data[data$gender=="f",]
library(ggplot2)

e<-ggplot(girls, aes(x=age, y=bmi, colour=study, shape=study,linetype=as.factor(lt))) + geom_line(size=1.05)+
  labs(x="Age (yrs)",y="Mean BMI")+theme_bw()+scale_x_continuous(breaks = seq(1, 22, 0.5))+
  scale_y_continuous(breaks = seq(14, 40, 0.5))+ theme(legend.title=element_blank())+
ggtitle("Girls population mean BMI values")


f<-ggplot(boys, aes(x=age, y=bmi, colour=study, shape=study,linetype=as.factor(lt))) + geom_line(size=1.05)+
  labs(x="Age (yrs)",y="Mean BMI")+theme_bw()+scale_x_continuous(breaks = seq(1, 20, 0.5))+
  scale_y_continuous(breaks = seq(14, 40, 0.5))+ theme(legend.title=element_blank())+
ggtitle("Boys population mean BMI values")



l<-e+scale_shape_manual(values = c(0,1,1,2,3,4,5, 0, 8,15,17,19,21,10,2, 0,0,0,1,1,1,1,1))+scale_colour_manual(values=c("chartreuse4","blue3","darkmagenta","red","deeppink","black","black","green","darkred", "tan1","chartreuse4","deepskyblue",
                "deepskyblue",
                "blue3","royalblue1","chocolate4","darkorange",
                "darkgrey", 
                "black","darkred","blueviolet","red"))
m<-f+scale_shape_manual(values = c(0,1,1,2,3,4,5, 0, 8,15,17,19,21,10,2, 0,0,0,1,1,1,1,1))+scale_colour_manual(values=c("chartreuse4","blue3","darkmagenta","red","deeppink","black","black","green","darkred", "tan1","chartreuse4","deepskyblue",
                "deepskyblue",
                "blue3","royalblue1","chocolate4","darkorange",
                "darkgrey", 
                "black","darkred","blueviolet","red"))

library(gridExtra)
grid.arrange(l,m, ncol=2)









