setwd("c:/Users/mqbpjhr4/Documents")
data<-read.table("MedBMIlitreview2.csv",header=T,sep=",")
boys<-data[data$gender=="m",]
girls<-data[data$gender=="f",]
library(ggplot2)

#FOR MEDIANS

scaleFUN <- function(x) sprintf("%.0f", x)

g<-ggplot(girls, aes(x=age, y=bmi, colour=study, shape=study,linetype=as.factor(lt))) + geom_line(size=1.05)+
  labs(x="Age (yrs)",y="Median BMI")+theme_bw()+scale_x_continuous(breaks = seq(1, 12, 0.2))+
  scale_y_continuous(breaks = seq(13, 20, 0.2),limits = c(14.25, 20))+
 theme(legend.title=element_blank())+
scale_x_continuous(labels=scaleFUN)+
theme(legend.text = element_text(size=8),axis.text=element_text(size=10),
axis.title=element_text(size=10))


b<-ggplot(boys, aes(x=age, y=bmi, colour=study, shape=study,linetype=as.factor(lt))) + geom_line(size=1.05)+
  labs(x="Age (yrs)",y="Median BMI")+theme_bw()+
scale_x_continuous(breaks = seq(1, 12, 0.2), limits =c(1,12))+
  scale_y_continuous(breaks = seq(13, 20, 0.2),limits = c(14.25, 20))+
 theme(legend.title=element_blank())+
scale_x_continuous(labels=scaleFUN)+
theme(legend.text = element_text(size=8),axis.text=element_text(size=10),
axis.title=element_text(size=10))

c<-g+scale_shape_manual(values = c(0, 1,2,3,4,5, 6, 8,15,17,19,21,10,2,8,0,0,0))+scale_colour_manual(values=c("red","blue3","blue3","goldenrod","forestgreen","forestgreen","blue3", 
                "blue3","blue3","goldenrod","blue3","blue3","forestgreen","red","red","blue3","blue3"))+
ggtitle("Median BMI by age and study population, girls")+geom_point(aes(x=age, y=bmi, colour=study, shape=study))

d<-b+scale_shape_manual(values = c(0, 1,2,3,4,5, 6, 8,15,17,19,21,10,2,8,0,0,0))+scale_colour_manual(values=c("red","blue3","blue3","goldenrod","forestgreen","forestgreen","blue3", 
                "blue3","blue3","goldenrod","blue3","blue3","forestgreen","red","red","blue3","blue3"))+
ggtitle("Median BMI by age and study population, boys")+geom_point(aes(x=age, y=bmi, colour=study, shape=study))

library(gridExtra)
grid.arrange(c,d, ncol=2)

